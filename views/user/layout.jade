  body.front
    #main
      mixin toptip
        .top1_wrapper
          .container
            .top1.clearfix
              .email1 这里是众乐旅行
              .phone1 +917 3386831
              .lang1
                - if (name)
                  .dropdown
                    button#dropdownMenu1.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='true')
                      | 欢迎您，马化腾
                      span.caret
                    ul.dropdown-menu(aria-labelledby='dropdownMenu1')
                      li
                        a.ge(href='#') 设置
                      li
                        a.ru(href='#') 退出
                - else
                  .dropdown
                    button#dropdownMenu1.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='true')
                      | 游客用户，请您
                      span.caret
                    ul.dropdown-menu(aria-labelledby='dropdownMenu1')
                      li
                        a.ge(href='#') 登录
                      li
                        a.ru(href='#') 注册
      mixin topnav
        .top2_wrapper
          .container
            .top2.clearfix
              header
                .logo_wrapper
                  a.logo(href='index.html')
                    img.img-responsive(src='/user/images/logo.png', alt='')
              .navbar.navbar_.navbar-default
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                .navbar-collapse.navbar-collapse_.collapse
                  ul.nav.navbar-nav.sf-menu.clearfix
                    li
                      a(href='index.html') 众乐首页
                    li
                      a(href='about.html') 查看最新旅程
                    li
                      a(href='gallery.html') 查看热门旅程
      mixin topslider
        #slider_wrapper
          .container
            #slider_inner
              div
                #slider
                  div
                    .carousel-box
                      .inner
                        .carousel.main
                          ul
                            li
                              .slider
                                .slider_inner
                                  .txt1
                                    span 欢迎访问众乐
                                  .txt2
                                    span 旅行
                                  .txt3
                                    span 你未到过的地方，我带你去；你曾去过的地方，有回忆等着你。
                            li
                              .slider
                                .slider_inner
                                  .txt1
                                    span 众乐
                                  .txt2
                                    span 旅行
                                  .txt3
                                    span 你、我都没留下脚印的地方，何不一起书写故事。
                            li
                              .slider
                                .slider_inner
                                  .txt1
                                    span 众乐
                                  .txt2
                                    span 旅行
                                  .txt3
                                    span 若想走别逗留愈是被挽留愈沉重不如一起走。
                  .slider_pagination
      // 导航
      block nav
      //内容
      block content
      
    mixin mixfooter
      .bot2_wrapper
        .container
          .left_side
            | 众乐旅行 © 2018.1.24
          .right_side
    // 页脚
    block footer
    script(src='/user/js/bootstrap.min.js')
    script(src='/public/js/public.js')
    block js
